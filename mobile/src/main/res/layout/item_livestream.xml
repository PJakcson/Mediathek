<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imageThumbnail"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:layout_aspectRatio="178%"
        app:layout_widthPercent="100%"/>

    <TextView
        android:id="@+id/textLiveTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="4dp"
        android:background="@color/colorTimeBackground"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="2dp"
        android:textAppearance="@style/WhiteShadowFont"
        android:textSize="12sp"
        tools:text="12 min"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageThumbnail"
        android:background="@drawable/gradient_bottom_up"
        android:orientation="vertical"
        android:padding="5dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/textStation"
            style="@style/WhiteShadowFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            tools:text="Phoenix - Jetzt live:"/>

        <TextView
            android:id="@+id/textTitle"
            style="@style/WhiteShadowFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="16sp"
            tools:text="NeoMagazin Royale"/>
    </LinearLayout>


</android.support.percent.PercentRelativeLayout>
