<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:id="@+id/imageThumbnail"/>
        <!--android:clickable="false"/>-->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:adjustViewBounds="true"
        android:id="@+id/imageStationLogo"
        android:src="@drawable/ic_zdf"
        android:layout_alignParentEnd="true"
        android:layout_margin="0dp"
        android:clickable="false"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/liveInfoContainer"
        android:padding="5dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_bottom_up">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textLiveTitle"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAppearance="@style/WhiteShadowFont"
            android:textSize="16sp"
            tools:text="testtest"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textLiveTime"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAppearance="@style/WhiteShadowFont"
            android:textColor="#ffcc80"
            android:textSize="12sp"
            tools:text="testtest"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textStationName"
        android:layout_alignParentEnd="true"
        android:padding="5dp"
        android:textColor="@android:color/white"
        android:shadowRadius="10"
        android:shadowColor="@android:color/black"
        android:textSize="20sp"
        tools:text="ZDF"
        android:visibility="gone"/>

<!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:adjustViewBounds="true"-->
        <!--android:id="@+id/imageLogo"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_margin="5dp"-->
        <!--android:textColor="@android:color/white"-->
        <!--android:shadowRadius="10"-->
        <!--android:shadowColor="@android:color/black"/>-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:id="@+id/textTitle"
        android:visibility="gone"/>
</RelativeLayout>
